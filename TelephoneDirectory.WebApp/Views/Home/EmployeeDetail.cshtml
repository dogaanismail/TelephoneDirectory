@using TelephoneDirectory.Entities.EntityFramework
@model  Employees
@{
    ViewBag.Title = "EmployeeDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-10">
    <div class="jumbotron">
        <p class="lead"> @Model.FirstName  @Model.LastName  </p>
    </div>
</div>
<div class="row">
    <div class="col-md-10">

        <div class="row panel panel-success" style="margin-top:2%;">
            <div class="panel-heading lead">
                <div class="row">
                    <div class="col-lg-8 col-md-8"><i class="fa fa-users"></i> View Employee Details</div>
                </div>
            </div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-lg-12 col-md-12">

                        <div class="row">             
                            <div class="col-lg-9 col-md-9">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a data-toggle="tab" href="#PersonalDetail" class="text-success"><i class="fa fa-indent"></i> Personal Detail</a></li>
                                    <li><a data-toggle="tab" href="#DepartmentInfo" class="text-success"><i class="fa fa-bookmark-o"></i> Department Info</a></li>
                                    <li><a data-toggle="tab" href="#ManagerInfo" class="text-success"><i class="fa fa-info"></i> Manager Info</a></li>
                                </ul>

                                <div class="tab-content">
                                    <div id="PersonalDetail" class="tab-pane fade in active">

                                        <div class="table-responsive panel">
                                            <table class="table">
                                                <tbody>
                                                    <tr>
                                                        <td class="text-success"><i class="glyphicon glyphicon-user"></i> Full Name</td>
                                                        <td>@Model.FirstName  @Model.LastName</td>
                                                    </tr>

                                                    <tr>
                                                        <td class="text-success"><i class="glyphicon glyphicon-phone"></i> Telephone Number</td>
                                                        <td>@Model.Phone_Number </td>
                                                    </tr>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div id="DepartmentInfo" class="tab-pane fade">
                                        <div class="table-responsive panel">
                                            <table class="table">
                                                <tbody>

                                                    @if (Model.Departments != null)
                                                    {
                                                    <tr>
                                                        <td class="text-success"><i class="glyphicon glyphicon-home"></i> Department Name</td>
                                                        <td>@Model.Departments.DepartmentName</td>
                                                    </tr>

                                                     }
                                                       
                                                    </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div id="ManagerInfo" class="tab-pane fade">
                                        <div class="table-responsive panel">
                                            <table class="table">
                                                <tbody>
                                                    @if (Model.Employees2 != null)
                                                    {
                                                        <tr>
                                                            <td class="text-success"><i class="glyphicon glyphicon-user"></i> Manager Full Name</td>
                                                            <td>@Model.Employees2.FirstName  @Model.Employees2.LastName</td>
                                                        </tr>
                                                    }



                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.table-responsive -->

            </div>
        </div>



    </div>
</div>

